{% embed 'utils/card.html.twig' with {'title': 'Iniciar Sesión'} %} 

{% block content %}

{% if error is defined and error%}
    <div class="alert alert-danger" role="alert">
        <strong>Ups!</strong> El email y la contraseña con coinciden.
    </div>
{% endif %}

<form id="signInForm" action="{{ path('login') }}" method="post">
    <div class="form-group"><input type="email" id="email" name="_username" class="form-control" placeholder="Dirección de email"></div>
    <div class="form-group"><input type="password" id="password" name="_password" class="form-control" placeholder="Contraseña"></div>
    <div class="checkbox">
        <label class="form-group"><input type="checkbox" value="remember-me"> Recordarme </label>
    </div>
    <button class="form-group btn btn-lg btn-primary btn-block" type="submit">Acceder</button>
    <div class="text-center"><a href="">No me acuerdo mi contraseña</a></div>

</form>
{% endblock %} {% endembed %}